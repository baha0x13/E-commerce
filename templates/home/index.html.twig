{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Welcome to Our E-commerce Store</h1>
            <p class="lead mb-5">Discover our amazing products and start shopping today!</p>
            
            {% if app.user %}
                <div class="mb-4">
                    <p class="h4 mb-4">Welcome back, {{ app.user.username }}!</p>
                    <a href="{{ path(seeProductsRoute) }}" class="btn btn-primary btn-lg me-3">
                        See Our Products
                    </a>
                    {% if isAdmin %}
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary btn-lg">Admin Dashboard</a>
                    {% endif %}
                </div>
            {% else %}
                <div class="mb-4">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg me-3">Se connecter</a>
                    <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">S'inscrire</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}