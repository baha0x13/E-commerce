{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h1 class="h4 mb-0">Create New Product</h1>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-danger">{{ form_errors(form.name) }}</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-danger">{{ form_errors(form.price) }}</small>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-danger">{{ form_errors(form.category) }}</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.stock, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-danger">{{ form_errors(form.stock) }}</small>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    <small class="text-danger">{{ form_errors(form.description) }}</small>
                </div>

                <div class="form-group mb-4">
                    {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                    <small class="text-danger">{{ form_errors(form.photo) }}</small>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Save
                    </button>
                    <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
