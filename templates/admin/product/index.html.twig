{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Products</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form class="mb-4">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Search by name..."
                           value="{{ searchTerm }}">
                </div>
                <div class="col-md-4">
                    <select name="category" class="form-select">
                        <option value="">All categories</option>
                        {% for category in categories %}
                            <option value="{{ category }}"
                                    {% if selectedCategory == category %}selected{% endif %}>
                                {{ category }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mb-3 text-end">
                <a href="{{ path('app_product_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        {% endif %}

        <div class="row">
            {% for product in products %}
                <div class="card h-100 mb-3" style="width: 18rem; display: inline-block;">
                    {% if product.photo %}
                        <img src="{{ asset('uploads/' ~ product.photo) }}" class="card-img-top" alt="{{ product.name }}" style="object-fit:cover; height:200px;">
                    {% else %}
                        <img src="{{ asset('images/no-image.png') }}" class="card-img-top" alt="No image" style="object-fit:cover; height:200px;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price|number_format(2, '.', ',') }} DT</p>
                        <p class="card-text"><span class="badge bg-primary">{{ product.category }}</span></p>
                        <p class="card-text">Stock: {{ product.stock }}</p>
                        <div class="d-flex justify-content-between gap-1 flex-wrap">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-info btn-sm flex-fill">
                                Details
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm flex-fill">
                                Edit
                            </a>
                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-danger btn-sm flex-fill" type="submit">Delete</button>
                            </form>
                            <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-sm flex-fill">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">No products found</div>
                </div>
            {% endfor %}
        </div>

        <div class="navigation">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}
