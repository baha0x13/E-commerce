{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Admin Dashboard</h1>

        <div class="alert alert-info">
            <i class="bi bi-person-circle"></i> Welcome to the Dashboard {{ app.user.username }}!
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-box"></i> Products
                        </h5>
                        <p class="card-text">Manage your product catalog, add new items, and edit existing ones.</p>
                        <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                            <i class="bi bi-box"></i> Manage Products
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-cart"></i> Orders
                        </h5>
                        <p class="card-text">View and manage your customers' orders, track their status.</p>
                        <a href="{{ path('admin_orders') }}" class="btn btn-primary">
                            <i class="bi bi-cart"></i> Manage Orders
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-people"></i> Users
                        </h5>
                        <p class="card-text">Manage user accounts, edit roles and permissions.</p>
                        <a href="{{ path('admin_users') }}" class="btn btn-primary">
                            <i class="bi bi-people"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
