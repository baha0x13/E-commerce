{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Admin Dashboard</h1>

        <div class="alert alert-info">
            <i class="bi bi-person-circle"></i> Welcome to the Dashboard {{ app.user.username }}!
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-box"></i> Products
                        </h5>
                        <p class="card-text">Manage your product catalog, add new items, and edit existing ones.</p>
                        <a href="{{ path(browseProductsRoute) }}" class="btn btn-primary">
                            <i class="bi bi-box"></i> Manage Products
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-cart"></i> Orders
                        </h5>
                        <p class="card-text">View and manage your customers' orders, track their status.</p>
                        <a href="{{ path('admin_orders') }}" class="btn btn-primary">
                            <i class="bi bi-cart"></i> Manage Orders
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-people"></i> Users
                        </h5>
                        <p class="card-text">Manage user accounts, edit roles and permissions.</p>
                        <a href="{{ path('admin_users') }}" class="btn btn-primary">
                            <i class="bi bi-people"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ path(seeProductsRoute) }}" class="btn btn-primary btn-lg me-3">
                    See Our Products
                </a>
            </div>
        </div>

        <div class="row mt-4">
            {% for product in products %}
                <div class="card h-100 mb-3" style="width: 18rem; display: inline-block;">
                    {% if product.photo %}
                        <img src="{{ asset('uploads/' ~ product.photo) }}" class="card-img-top" alt="{{ product.name }}" style="object-fit:cover; height:200px;">
                    {% else %}
                        <img src="{{ asset('images/no-image.png') }}" class="card-img-top" alt="No image" style="object-fit:cover; height:200px;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price|number_format(2, '.', ',') }} DT</p>
                        <p class="card-text"><span class="badge bg-primary">{{ product.category }}</span></p>
                        <p class="card-text">Stock: {{ product.stock }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">Details</a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mb-3 text-end">
            <a href="{{ path('app_product_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>
{% endblock %}
