{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<style>
    .admin-card {
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        border: none;
    }
    .admin-card:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 6px 24px rgba(0,0,0,0.13);
        z-index: 2;
    }
    .admin-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: #0d6efd;
    }
</style>
<div class="container mt-5">
    <h1 class="mb-5 text-center fw-bold">Admin Dashboard</h1>
    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card admin-card h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center">
                    <span class="admin-icon"><i class="bi bi-box"></i></span>
                    <h5 class="card-title mb-3">Products</h5>
                    <p class="card-text mb-4">Manage your product catalog, add new items, and edit existing ones.</p>
                    <a href="{{ path('app_product_index') }}" class="btn btn-primary w-100">
                        <i class="bi bi-box"></i> Manage Products
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card admin-card h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center">
                    <span class="admin-icon"><i class="bi bi-cart"></i></span>
                    <h5 class="card-title mb-3">Orders</h5>
                    <p class="card-text mb-4">View and manage customer orders.</p>
                    <a href="{{ path('admin_orders') }}" class="btn btn-primary w-100">
                        <i class="bi bi-cart"></i> Manage Orders
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card admin-card h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center">
                    <span class="admin-icon"><i class="bi bi-people"></i></span>
                    <h5 class="card-title mb-3">Users</h5>
                    <p class="card-text mb-4">Manage user accounts and permissions.</p>
                    <a href="{{ path('admin_users') }}" class="btn btn-primary w-100">
                        <i class="bi bi-people"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
