{% extends 'base.html.twig' %}

{% block title %}Admin - Orders{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commands Management</h1>
        
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Go back to Dashboard
        </a>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.user.username }}</td>
                            <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                            <td>{{ order.status }}</td>
                            <td>{{ order.total }} DT</td>
                            <td>
                                <a href="{{ path('admin_order_show', {id: order.id}) }}" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No orders found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}